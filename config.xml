<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BANKSONIK</name>
    <description>
        BANK SOAL ELEKTRONIK
    </description>
    <author email="nugroho.redbuff@gmail.com" href="http://klubaners.wordpress.com">
        KOMUNITAS LINUX BANJARNEGARA
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
	<icon src="img/bse.png" platform="android" width="36" height="36" density="ldpi" />
	<icon src="img/bse.png" platform="android" width="48" height="48" density="mdpi" />
	<icon src="img/bse.png" platform="android" width="72" height="72" density="hdpi" />
	<icon src="img/bse.png" platform="android" width="96" height="96" density="xhdpi" />
	<icon src="img/bse.png" platform="android" width="144" height="144" density="xxhdpi" />
	<icon src="img/bse.png" platform="android" width="192" height="192" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
